        <VBox prefHeight="575.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="78.0" prefWidth="200.0">
               <graphic>
                  <FontIcon iconLiteral="bi-person-circle" iconSize="70" />
               </graphic>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </Label>
                <Label fx:id="userEmail" alignment="BOTTOM_CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="200.0">
