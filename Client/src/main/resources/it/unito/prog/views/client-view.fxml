                  <FontIcon fx:id="serverInfoIcon" iconLiteral="bi-record-fill" styleClass="text-danger" wrappingWidth="17.0" />
               </graphic></Label>
                <Button fx:id="composeButton" mnemonicParsing="false" onAction="#onVBoxButtonAction" prefHeight="75.0" prefWidth="200.0" text=" Compose">
